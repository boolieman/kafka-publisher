{
  "name": "kafka-publisher",
  "version": "0.1.3",
  "description": "kafka message publisher, fallback appending messages to a file while kafka unavailable",
  "main": "kafka-publisher.js",
  "keywords": [
    "kafka",
    "publisher",
    "fallback"
  ],
  "scripts": {
    "watchInteg": "ava --fail-fast -v **/__integ-tests__/**/*test*.js --watch",
    "watchUnit": "DEBUG=kafka* ava --fail-fast -v **/__tests__/**/*test*.js --watch",
    "coverage": "nyc ava",
    "ava": "ava",
    "test": "npm run ava",
    "start": "nodemon --exec babel-node lib/logging.js",
    "lint": "eslint . --ext=js --ignore-pattern '**/__tests__' --ignore-pattern '**/public/api-docs' --ignore-path .gitignore --fix"
  },
  "author": "Troy Collinsworth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:tcollinsworth/kafka-publisher.git"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.5.2",
    "babel-register": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.0",
    "ignore-styles": "^5.0.1",
    "nyc": "^11.2.1",
    "sinon": "^2.3.5"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "debug": "^2.6.8",
    "delay": "^4.1.0",
    "json-stringify-safe": "^5.0.1",
    "no-kafka": "^3.3.3",
    "promise-retry": "^1.1.1",
    "promise-timeout": "^1.3.0",
    "stdout-stream": "^1.4.0",
    "uuid": "^3.3.2"
  },
  "ava": {
    "files": [
      "**/__tests__/**/*test*.js"
    ],
    "failFast": true,
    "verbose": true,
    "require": [
      "ignore-styles",
      "babel-register",
      "babel-polyfill"
    ],
    "babel": "inherit"
  }
}
